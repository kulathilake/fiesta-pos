// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Employee {
  id  Int @id @default(autoincrement())
  hashedPin String
  name String
  mobile BigInt
  otps  OTP[]
}

model OTP {
  requestId String @id @unique
  employee Employee @relation(fields: [employeeId], references: [id])
  employeeId Int
  otp Int
  isSent Boolean
  sentAt DateTime?
  isUsed Boolean
  usedAt DateTime?
  expiresAt DateTime

  @@index([employeeId])
}

model ItemCategory {
  id Int @id @default(autoincrement())
  label String
  items Item[]
  section Section
}
model Item {
  id Int @id @default(autoincrement())
  name String
  price Float
  photo String
  category ItemCategory @relation(fields: [categoryId],references: [id])
  categoryId Int
  billItems BillItem[]

  @@index([categoryId])
}

// Bills
model BillItem{
  id Int @id @default(autoincrement())
  bill Bill @relation(fields: [billId], references: [id])
  item Item @relation(fields: [itemId], references: [id])
  itemId Int
  billId String
  qty Int
  kots KitchenTicket[]

  @@index([billId])
  @@index([itemId])
}

model KitchenTicket {
  id Int @id @default(autoincrement())
  bill Bill @relation(fields: [billId],references: [id])
  billId String
  billItem BillItem @relation(fields: [billItemId], references: [id])
  billItemId Int
  issuedAt DateTime
  qty Int
  typeOverride BillType?
  status KOTStatus @default(RECIEVED)

  @@index([billId])
  @@index([billItemId])
}

model Bill {
  id String @id @unique
  visibleId String @default("001")
  items BillItem[]
  table Int?
  type BillType
  openedAt DateTime
  closedAt DateTime?
  payment BillPayment?
  status BillStatus
  tickets KitchenTicket[]
}

model BillPayment {
  paymentId Int @id @default(autoincrement())
  bill Bill @relation(fields: [billId], references: [id])
  billId String @unique
  mode PaymentMode
  total Float
  tendered Float?
  balance Float?
  paidAt DateTime
}

// Enums
enum Section {
  HOT_KITCHEN
  BBQ_N_GRILL
  INDIAN_CUISINE
  JUICE_BAR
}
enum BillType {
  DINEIN
  TAKEOUT
}
enum BillStatus {
  OPEN
  CANCELLED
  PAID
}

enum PaymentMode {
  CASH
  CARD
  BANK
}

enum KOTStatus {
  RECIEVED
  TO_KITCHEN
  PREPARING
  DISPATCHED
}